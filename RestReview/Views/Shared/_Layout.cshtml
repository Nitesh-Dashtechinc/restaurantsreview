<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upserve - Restaurent Marketing Grader</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            padding: 0px 0px;
           
        }
        .body {
            padding-bottom: 0px !important;
            background: url("../../Content/image/backgrnd.png")no-repeat center center;
            /*background-repeat: no-repeat;*/
            background-position: top;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            max-width: 1450px;
            max-height: 850px;
        }
        footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 50px;
            line-height: 50px;
            background-color: black;
        }
       
    </style>
</head>

<body>
    <div class="body">
    
        <div class="container body-content" style="padding-top:3%;">
            <div class="container">
                <div class="row ">
                    <div class="col-md-4 col-xs-1"></div>
                    <div class="col-md-4 col-xs-10 text-center">
                        <a href="" class="logo"><img class="image" src="~/Content/image/logo.png" style="max-height:60px;"></a>
                    </div>
                    <div class="col-md-4 col-xs-1"></div>
                </div>
                <div class="row">
                    <div class="text-center col-md-12"><h1><b style="font-weight:800;letter-spacing:-2px;">RESTAURANT MARKETING GRADER</b></h1></div>

                    <div class="text-center  col-md-12" style="margin-top:-20px;">
                        <h4><b style="font-weight: 800;">Powered by</b> Upserve</h4>
                    </div>

                </div>
            </div>

            @RenderBody()

        </div>
    </div>
    <footer class="navbar-fixed-bottom text-center" style="padding:0px 25px 0px 25px;">
        <p>
            <h6 style="color:white;float:left;margin-top: 0px;">Copyright &copy; 20018 <b>Upserve</b></h6>
            <h6 style="color:white;float:right;margin-top: 0px;">10 Dorrance St. Providence, RI 02903 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;   (855)664-3887</h6>
        </p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
